<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ui.home.article.ArticleDisplayFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/article_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/article_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/authorTextColor"
        android:textSize="14sp"
        tools:text="BBC News" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/titleTextColor"
        android:textSize="22sp"
        tools:text="SAG Awards 2024: Oppenheimer dominates ahead of Oscars" />

    <TextView
        android:id="@+id/article_publishAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/timeTextColor"
        android:textSize="16sp"
        tools:text="3 hours" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/article_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    tools:text="Why are football's biggest clubs starting a new
tournament Why are football’s biggest clubs
starting a new tournamentWhy are football’s biggest
clubs starting a new tournamentWhy are football’s
biggest clubs starting a new tournamentWhy are
football’s biggest clubs starting a new tournament." />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:id="@+id/open_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/view_full_article"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/ic_arrow_right" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>